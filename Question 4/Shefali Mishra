#include <bits/stdc++.h>
using namespace std;

int main()
{
	int t,n,i,sum;
	cin>>t;
	while(t--)
	{
		cin>>n;
		int a[n];
		for(i=0;i<n;i++)
			cin>>a[i];
		
		sort(a,a+n);
		
		int temp=0;
		for(i=1;i<n;i+=2)
		{
			temp=a[i];
			a[i]=a[i-1];
			a[i-1]=temp;
		}
		
		for(i=0;i<n;i++)
			cout<<a[i]<<" ";
		
		cout<<"\n";			
	} 
	return 0;
}
